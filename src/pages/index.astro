---
import AboutMe from '@/components/AboutMe.astro';
import Badge from '@/components/Badge.astro';
import Briefcase from '@/components/icons/Briefcase.astro';
import Card from '@/components/Card.astro';
import CodeIcon from '@/components/icons/Code.astro';
import Experiencie from '@/components/Experience.astro';
import GithubIcon from '@/components/icons/Github.astro';
import Layout from '@/layouts/Layout.astro';
import LinkedinIcon from '@/components/icons/Linkedin.astro';
import MailIcon from '@/components/icons/Mail.astro';
import ProfileCheck from '@/components/icons/ProfileCheck.astro';
import Projects from '@/components/Projects.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import SocialPill from '@/components/icons/socialPill.astro';

---

<Layout title="Portafolio Daniel Berrio - Analista y Desarrollador de Software"
		description="Lorem ipsum dolor sit amet, consectetur adipiscing elit in fac elementum in fac elementum"
>
	<main class="px-4">	
	 <SectionContainer class="py-44 pb-32">
		<img class="rounded-full w-16 h-16 mb-4" 
    		src="https://media.licdn.com/dms/image/D4E03AQGMq6z7GehYGw/profile-displayphoto-shrink_800_800/0/1703008943318?e=2147483647&v=beta&t=BGQVLjDLl1gruz9m4Cit0xi5ib_LIEMcmR6lzZ6Eb44" 
    		alt="daniel-photo">
		<h1 class="text-white text-3xl md:text-4xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">Hola, Soy Daniel Berrio 
			<a href="mailto:berriobarriosdaniel@gmail.com" target="_blank" rel="noopener" class="flex justify-center items-center hover:scale-105 transition">
				<Badge>Open to work!</Badge>
			</a>
		</h1>
		
		<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
			<span>+2 años de experiencia.</span> <span class="text-yellow-200/90">Analista y Desarrollaor de software</span>
			<span class="text-red-200/90">de Montería, Colombia.</span>
			<span class="opacity-75"> Especializado en el desarrollo web.</span>
		</h2>

		<nav class="flex gap-x-4 mt-8 flex-wrap">
			<SocialPill href="https://www.linkedin.com/in/daniel-berrio-barrios/">
				<LinkedinIcon class="size-4 md:size-6"/>
				LinkedIn
			</SocialPill>
			<SocialPill href="https://github.com/KingDanyDev">
				<GithubIcon class="size-4 md:size-6"/>
				GitHub
			</SocialPill>
			<SocialPill href="mailto:berriobarriosdaniel@gmail.com">
				<MailIcon class="size-4 md:size-6"/>
				Enviame un correo
			</SocialPill>
			
		</nav>
	</SectionContainer>

	<SectionContainer id="experiencia">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<Briefcase class="size-7"/>
			Experiencia Laboral
		</h2>
		<Experiencie />
	</SectionContainer>

	<SectionContainer id="proyectos">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<CodeIcon class="size-7"/>
			Proyectos
		</h2>
		<Projects />
	</SectionContainer>

	<SectionContainer id="sobre-mi">
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<ProfileCheck class="size-7"/>
			Sobre Mi
		</h2>
		<AboutMe />
	</SectionContainer>

	</main>
</Layout>

