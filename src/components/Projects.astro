---
import LinkButton from "./LinkButton.astro"
import Github from "./icons/Github.astro"
import Mongo from "./icons/Mongo.astro"
import NestJs from "./icons/NestJs.astro"

const TAGS = {
    NEXT: {
        name: "nextJS",
        class: "bg-black text-white",
        icon: NestJs
    },
    TAILWIND: {
        name: 'TailwindCSS',
        class: 'bg-white text-[#32B9F1]',
         icon: Mongo
    }
} 

const PROJECTS = [
    {
        title: 'Gestión de eventos',
        descirption: 'Para el control y la gestión del resporte de horas dadas por los instructores del Sena.',
        link: '#',
        github: 'https://github.com/KingDanyDev/disenno-y-desarrollo-de-sistemas-pruebas',
        image: '/projects/dds.jpg',
        tags: [TAGS.NEXT, TAGS.TAILWIND]
    },
    {
        title: 'Facturación con PHP',
        description:'Software de facturación hecho con PHP, MySQL y JavaScript, para la gestión y optimización de ventas, inventario, clientes y facturas',
        github: 'https://github.com/KingDanyDev/Facturacion-PHP',
        image:'/projects/facturacion.webp',
        tags: [TAGS.NEXT]
    }
]
---
<section class="flex flex-col gap-y-16">
{
   
    PROJECTS.map(({image, title, descirption, tags, link, github})=>(
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">
                {descirption}
            </p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {
                    tags.map((tag)=>(
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-4"/> 
                                {tag.name}
                           </span>
                        </li>
                    ))}
             </ul>
             <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}>
             <footer class="flex gap-x-4">
               <LinkButton href={github}>
                    <Github class="size-6"/>
                    Ver código fuente
                </LinkButton>
               

                {link && ( <LinkButton>
                    <svg width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" /><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" /><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" /><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" /><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" /><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" /><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" /></svg>
                    Ir al sitio web
                </LinkButton>
                )}
                
            </footer>
        </article>
    ))
}
</section>